{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"useDefineForClassFields": true,
		"moduleResolution": "node",
		"strict": true,
		"alwaysStrict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["esnext", "dom"],
		"paths": {
			"~/*": ["src/*"]
		},
		"skipLibCheck": true,
		"noUnusedLocals": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
